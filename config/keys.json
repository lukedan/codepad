{
	"editor": [
		{
			"gestures": "insert",
			"action": "contents_region.toggle_insert"
		}
	],
	"code_editor": {
		"inherit_from": "editor",
		"hotkeys": [
			{
				"gestures": "left",
				"action": "contents_region.carets.move_left"
			},
			{
				"gestures": "right",
				"action": "contents_region.carets.move_right"
			},
			{
				"gestures": "up",
				"action": "contents_region.carets.move_up"
			},
			{
				"gestures": "down",
				"action": "contents_region.carets.move_down"
			},

			{
				"gestures": "shift+left",
				"action": { "contents_region.carets.move_left": { "continue_selection": true } }
			},
			{
				"gestures": "shift+right",
				"action": { "contents_region.carets.move_right": { "continue_selection": true } }
			},
			{
				"gestures": "shift+up",
				"action": { "contents_region.carets.move_up": { "continue_selection": true } }
			},
			{
				"gestures": "shift+down",
				"action": { "contents_region.carets.move_down": { "continue_selection": true } }
			},

			{
				"gestures": "home",
				"action": "contents_region.carets.move_to_line_beginning_noblank"
			},
			{
				"gestures": "end",
				"action": "contents_region.carets.move_to_line_ending"
			},
			{
				"gestures": "ctrl+home",
				"action": "contents_region.carets.move_to_line_beginning"
			},
			{
				"gestures": "shift+home",
				"action": { "contents_region.carets.move_to_line_beginning_noblank": { "continue_selection": true } }
			},
			{
				"gestures": "shift+end",
				"action": { "contents_region.carets.move_to_line_ending": { "continue_selection": true } }
			},
			{
				"gestures": "shift+ctrl+home",
				"action": { "contents_region.carets.move_to_line_beginning": { "continue_selection": true } }
			},

			{
				"gestures": "alt+j",
				"action": "contents_region.carets.move_left"
			},
			{
				"gestures": "alt+l",
				"action": "contents_region.carets.move_right"
			},
			{
				"gestures": "alt+i",
				"action": "contents_region.carets.move_up"
			},
			{
				"gestures": "alt+k",
				"action": "contents_region.carets.move_down"
			},
			{
				"gestures": "alt+u",
				"action": "contents_region.carets.move_to_line_beginning_noblank"
			},
			{
				"gestures": "alt+o",
				"action": "contents_region.carets.move_to_line_ending"
			},

			{
				"gestures": "alt+shift+j",
				"action": { "contents_region.carets.move_left": { "continue_selection": true } }
			},
			{
				"gestures": "alt+shift+l",
				"action": { "contents_region.carets.move_right": { "continue_selection": true } }
			},
			{
				"gestures": "alt+shift+i",
				"action": { "contents_region.carets.move_up": { "continue_selection": true } }
			},
			{
				"gestures": "alt+shift+k",
				"action": { "contents_region.carets.move_down": { "continue_selection": true } }
			},
			{
				"gestures": "alt+shift+u",
				"action": { "contents_region.carets.move_to_line_beginning_noblank": { "continue_selection": true } }
			},
			{
				"gestures": "alt+shift+o",
				"action": { "contents_region.carets.move_to_line_ending": { "continue_selection": true } }
			},

			{
				"gestures": "ctrl+z",
				"action": "contents_region.undo"
			},
			{
				"gestures": "ctrl+y",
				"action": "contents_region.redo"
			},

			{
				"gestures": "ctrl+-",
				"action": "contents_region.folding.fold_selected"
			},

			{
				"gestures": "backspace",
				"action": "contents_region.delete_before_carets"
			},
			{
				"gestures": "delete",
				"action": "contents_region.delete_after_carets"
			},
			{
				"gestures": "enter",
				"action": "contents_region.insert_new_line"
			},

			{
				"gestures": "ctrl+f",
				"action": "code_contents_region.search"
			}
		]
	},
	"binary_editor": {
		"inherit_from": "editor"
	},
	"tab": [
		{
			"gestures": [ "ctrl+t", "left" ],
			"action": "tab.split_left"
		},
		{
			"gestures": [ "ctrl+t", "right" ],
			"action": "tab.split_right"
		},
		{
			"gestures": [ "ctrl+t", "up" ],
			"action": "tab.split_up"
		},
		{
			"gestures": [ "ctrl+t", "down" ],
			"action": "tab.split_down"
		},

		{
			"gestures": [ "ctrl+t", "ctrl+n" ],
			"action": "tab.move_to_new_window"
		},

		{
			"gestures": "ctrl+w",
			"action": "tab.request_close"
		}
	],
	"tab_host": [
		{
			"gestures": "ctrl+o",
			"action": "open_file"
		},
		{
			"gestures": "ctrl+shift+alt+s",
			"action": {
				"open_file": "config/settings.json"
			}
		},
		{
			"gestures": "ctrl+shift+o",
			"action": "open_binary_file_dialog"
		},
		{
			"gestures": "ctrl+n",
			"action": "new_file"
		}
	],

	"text_edit": [
		{
			"gestures": "left",
			"action": "text_edit.move_caret_left"
		},
		{
			"gestures": "shift+left",
			"action": { "text_edit.move_caret_left": { "continue_selection": true } }
		},
		{
			"gestures": "right",
			"action": "text_edit.move_caret_right"
		},
		{
			"gestures": "shift+right",
			"action": { "text_edit.move_caret_right": { "continue_selection": true } }
		},
		{
			"gestures": "up",
			"action": "text_edit.move_caret_up"
		},
		{
			"gestures": "shift+up",
			"action": { "text_edit.move_caret_up": { "continue_selection": true } }
		},
		{
			"gestures": "down",
			"action": "text_edit.move_caret_down"
		},
		{
			"gestures": "shift+down",
			"action": { "text_edit.move_caret_down": { "continue_selection": true } }
		},

		{
			"gestures": "home",
			"action": "text_edit.move_caret_to_line_beginning"
		},
		{
			"gestures": "shift+home",
			"action": { "text_edit.move_caret_to_line_beginning": { "continue_selection": true } }
		},
		{
			"gestures": "end",
			"action": "text_edit.move_caret_to_line_ending"
		},
		{
			"gestures": "shift+end",
			"action": { "text_edit.move_caret_to_line_ending": { "continue_selection": true } }
		},

		{
			"gestures": "backspace",
			"action": "text_edit.delete_before"
		},
		{
			"gestures": "delete",
			"action": "text_edit.delete_after"
		}
	]
}
