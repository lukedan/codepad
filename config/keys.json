			},

			{
				"gestures": "ctrl+z",
				"command": "contents_region.undo"
			},
			{
				"gestures": "ctrl+y",
				"command": "contents_region.redo"
			},

			{
				"gestures": "ctrl+-",
				"command": "contents_region.folding.fold_selected"
			},

			{
