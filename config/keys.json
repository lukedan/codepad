		{
			"gestures": [ "ctrl+t", "up" ],
			"command": "tab.split_up"
		},
		{
			"gestures": [ "ctrl+t", "down" ],
			"command": "tab.split_down"
		},

		{
			"gestures": [ "ctrl+t", "ctrl+n" ],
